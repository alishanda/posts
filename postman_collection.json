{
  "info": {
    "name": "Posts API",
    "description": "Коллекция API запросов для Posts API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\",\n  \"password_confirmation\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('token', response.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/auth/me",
              "host": ["{{base_url}}"],
              "path": ["auth", "me"]
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/auth/logout",
              "host": ["{{base_url}}"],
              "path": ["auth", "logout"]
            }
          }
        }
      ]
    },
    {
      "name": "Posts",
      "item": [
        {
          "name": "Get All Posts",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/posts?status=published&search=test",
              "host": ["{{base_url}}"],
              "path": ["posts"],
              "query": [
                {
                  "key": "status",
                  "value": "published"
                },
                {
                  "key": "search",
                  "value": "test"
                }
              ]
            }
          }
        },
        {
          "name": "Create Post",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Мой первый пост\",\n  \"content\": \"Это содержимое моего первого поста. Здесь может быть много текста.\",\n  \"status\": \"published\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/posts",
              "host": ["{{base_url}}"],
              "path": ["posts"]
            }
          }
        },
        {
          "name": "Get Post by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/posts/1",
              "host": ["{{base_url}}"],
              "path": ["posts", "1"]
            }
          }
        },
        {
          "name": "Update Post",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Обновленный заголовок\",\n  \"content\": \"Обновленное содержимое поста\",\n  \"status\": \"published\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/posts/1",
              "host": ["{{base_url}}"],
              "path": ["posts", "1"]
            }
          }
        },
        {
          "name": "Delete Post",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/posts/1",
              "host": ["{{base_url}}"],
              "path": ["posts", "1"]
            }
          }
        },
        {
          "name": "Get My Posts",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/my/posts",
              "host": ["{{base_url}}"],
              "path": ["my", "posts"]
            }
          }
        },
        {
          "name": "Get Active Posts by User",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/users/1/posts/active",
              "host": ["{{base_url}}"],
              "path": ["users", "1", "posts", "active"]
            }
          }
        }
      ]
    },
    {
      "name": "Comments",
      "item": [
        {
          "name": "Get All Comments",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/comments?status=active&post_id=1",
              "host": ["{{base_url}}"],
              "path": ["comments"],
              "query": [
                {
                  "key": "status",
                  "value": "active"
                },
                {
                  "key": "post_id",
                  "value": "1"
                }
              ]
            }
          }
        },
        {
          "name": "Create Comment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"Отличный пост! Очень информативно.\",\n  \"post_id\": 1\n}"
            },
            "url": {
              "raw": "{{base_url}}/comments",
              "host": ["{{base_url}}"],
              "path": ["comments"]
            }
          }
        },
        {
          "name": "Create Reply",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"Согласен с вами!\",\n  \"post_id\": 1,\n  \"parent_id\": 1\n}"
            },
            "url": {
              "raw": "{{base_url}}/comments",
              "host": ["{{base_url}}"],
              "path": ["comments"]
            }
          }
        },
        {
          "name": "Get Comment by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/comments/1",
              "host": ["{{base_url}}"],
              "path": ["comments", "1"]
            }
          }
        },
        {
          "name": "Update Comment",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"Обновленный комментарий\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/comments/1",
              "host": ["{{base_url}}"],
              "path": ["comments", "1"]
            }
          }
        },
        {
          "name": "Delete Comment",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/comments/1",
              "host": ["{{base_url}}"],
              "path": ["comments", "1"]
            }
          }
        },
        {
          "name": "Get My Comments",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/my/comments",
              "host": ["{{base_url}}"],
              "path": ["my", "comments"]
            }
          }
        },
        {
          "name": "Get Active Comments by User",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/users/1/comments/active",
              "host": ["{{base_url}}"],
              "path": ["users", "1", "comments", "active"]
            }
          }
        },
        {
          "name": "Get Comments by Post",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/posts/1/comments",
              "host": ["{{base_url}}"],
              "path": ["posts", "1", "comments"]
            }
          }
        },
        {
          "name": "Get Replies",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/comments/replies",
              "host": ["{{base_url}}"],
              "path": ["comments", "replies"]
            }
          }
        }
      ]
    }
  ]
}
